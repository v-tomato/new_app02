<!--予定入力後の確認ページ-->
<header class="masthead">
<div class="container signup-container-2">
  <div class="row">
    <div class="col">　　
    
    <div class = "show-meetings-text" >
        
    <p>
      <strong>タイトル</strong>
      <%= @meeting.title %>
     </p>

     <p>
       <strong>開始時刻</strong>
       <%= @meeting.start_time.strftime("%Y-%m-%d %H:%M") %>
     </p>

     <p>
      <strong>内容</strong>
      <%= @meeting.content %>
     </p>
     
     
     
    　<strong>画像</strong>
    　<p>
      <% @meetings.each do |meeting| %>
        <% if meeting.picture.attached? %>
          <%= image_tag meeting.resize_picture %>
       <% end %>
      <% end %>  
      </p>
     
     </div>
     
    <p>
      <%= link_to '変更', edit_user_meeting_path(@meeting) %> |
      <%= link_to '削除', user_meeting_path(@meeting), method: :delete %>|
      <%= link_to '戻る', user_meetings_path(id: current_user) %>
    </p>
　　
　　</div>
  </div>
</div>
</header>


